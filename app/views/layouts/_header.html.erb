      <li>
        <%= link_to "Bookers", root_path %>
      </li>
     <li>
        <%= link_to user_path(current_user) do %>
        <i class="fa-solid fa-house"></i>
        Home
         <% end %>
      </li>
      <li>
        <%= link_to users_path do %>
        <i class="fa-solid fa-users"></i>
        Users
        <% end %>
      </li>
