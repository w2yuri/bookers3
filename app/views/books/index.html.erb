
<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>

<% @books.each do |book| %>
  <div>
    <%= image_tag book.get_image %>
    <p>投稿ユーザー画像：<%= image_tag 'sample-author1.jpg' %></p>
    <p>ショップ名：<%= book.title %></p>
    <p>説明：<%= book.bodyn %></p>
  </div>
<% end %>