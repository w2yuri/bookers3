!index! 
<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>

<% @books.each do |book| %>
  <div>
    <%= image_tag book.get_image %>
    <p><%= book.title %></p>
    <p><%= book.body %></p>
  </div>
<% end %>

<%= link_to books_path(@book.id) do %>
  <% end %>