<h1>Book detail</h1>
<h2>show</h2>

<%= render partial: 'users/user', locals: { user: @user } %>
<%= render partial: 'books', locals: { book: @book } %>

<div>
  <%= image_tag @book.get_image %>
  <p><%= link_to @book.user.name, user_path(current_user) %></p>
  <p><%= link_to @book.title %></p>
  <p><%= @book.body %></p>
  <% if @book.user == current_user %>
  <%= link_to edit_book_path, method: :get, class: 'btn btn-success' do %>
    Edit
    <% end %>
    <%= link_to book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-danger" %>
    Destroy
  <% end %>
  </div>