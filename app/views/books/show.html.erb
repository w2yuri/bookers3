<h1>Book detail</h1>
<h2>show!!!</h2>

<div>
  <%= image_tag @book.get_image %>
  <p>ユーザーネーム：<%= @book.user.name %></p>
  <p>タイトル　リンク付き</p>
  <p>opinion<%= @book.body %></p>
  <% if @book.user == current_user %>
    <%= link_to "Destroy", books_path(@book), method: :delete %>
  <% end %></div>


<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>