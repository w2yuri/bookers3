<div>
  <h1>Books</h1>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
      <% books.each do |book| %>
        <tr>
          <td><%= link_to image_tag(user.get_profile_image(100,100)), user_path(book.user_id) %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
          <td id="favorite_btn_<%= book.id %>">
            <%= render "favorites/favorite", book: book %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>