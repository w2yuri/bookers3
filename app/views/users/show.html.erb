<div>
  <h3>User info</h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name   <%= @user.name %></p>
　<p>introduction<%= @user.self_introduction %></p>
  <% if @user == current_user %>
  <p><%= link_to edit_user_path(@user), class: "btn btn-secondary text-white", method: :get do %></p>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  <% end %>
</div>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>